<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/views/layouts">
    <!-- 不进行装饰的路径 -->
    <excludes>
        <pattern>/static/*</pattern>
        <pattern>/api/*</pattern>
    </excludes>

    <!-- 默认装饰器 -->
    <decorator name="default" page="decorator.jsp">
        <pattern>/*</pattern>
    </decorator>

</decorators>
